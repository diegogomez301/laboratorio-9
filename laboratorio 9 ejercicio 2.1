import pandas as pd

# Crear el DataFrame con los productos y precios
data = {
    'Producto': ['Producto A', 'Producto B', 'Producto C', 'Producto D'],
    'Precio': [150, -25, 100, None]
}

df = pd.DataFrame(data)

# Validar que los precios sean mayores o iguales a 0 y no nulos
df['Precio Valido'] = df['Precio'].apply(lambda x: x >= 0 if pd.notnull(x) else False)

# Filtrar los productos con precios inválidos
productos_invalidos = df[~df['Precio Valido']]

# Mostrar los productos con precios inválidos
print("Productos con precios inválidos:")
print(productos_invalidos[['Producto', 'Precio']])
